# Let PHP handle preflight (OPTIONS)
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Do not redirect OPTIONS; pass to PHP so scripts can 200 and exit
    
    # Giữ lại các cấu hình rewrite khác của bạn nếu có (ví dụ index.php...)
</IfModule>